# Claude AI API Configuration
CLAUDE_ORG_ID=your_org_id_here
CLAUDE_SESSION_KEY=your_session_key_here

# Adaptive Polling Configuration (optional - defaults shown)
# All values are in seconds

# Minimum polling interval (fastest rate)
# POLL_MIN_INTERVAL_SECS=180

# Maximum polling interval (slowest rate when dormant)
# POLL_MAX_INTERVAL_SECS=5400

# Recency window - how far back to look for recent changes (fast detection)
# POLL_RECENCY_WINDOW_SECS=600

# Context window - how far back to look for sustained trends
# POLL_CONTEXT_WINDOW_SECS=3600

# How long without any changes before entering Cold state
# POLL_IDLE_TO_COLD_SECS=1800

# Retry Configuration (optional - defaults shown)
# Controls exponential backoff behavior when errors occur

# Minimum retry delay (initial backoff)
# RETRY_MIN_DELAY_SECS=5

# Maximum retry delay (backoff cap)
# RETRY_MAX_DELAY_SECS=300

# Backoff multiplier (how quickly delay increases)
# RETRY_MULTIPLIER=2.0
