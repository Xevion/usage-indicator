{
	"name": "usage-indicator",
	"private": true,
	"version": "0.1.2",
	"type": "module",
	"packageManager": "bun@1.3.1",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"tauri": "dotenv -e .env -- tauri",
		"typecheck": "tsc --noEmit",
		"format": "biome check --write . && cargo fmt",
		"format:check": "biome check . && cargo fmt --check",
		"check": "tsc --noEmit && biome lint . && cargo clippy"
	},
	"dependencies": {
		"@tauri-apps/api": "^2",
		"@tauri-apps/plugin-opener": "^2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@tauri-apps/cli": "^2",
		"@tsconfig/node22": "^22.0.5",
		"@types/node": "^24.10.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"dotenv-cli": "^11.0.0",
		"typescript": "~5.8.3",
		"vite": "^7.0.4"
	}
}
