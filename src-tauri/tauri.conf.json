{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "usage-indicator",
	"version": "0.1.3",
	"identifier": "com.xevion.usage-indicator",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "usage-indicator",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"createUpdaterArtifacts": true,
		"publisher": "Ryan Walters",
		"homepage": "https://github.com/Xevion/usage-indicator",
		"shortDescription": "Monitor rate-limited cloud service usage",
		"longDescription": "A system tray application for monitoring usage statistics of rate-limited cloud services.",
		"windows": {
			"nsis": {
				"installMode": "currentUser",
				"displayLanguageSelector": false
			}
		},
		"macOS": {
			"dmg": {
				"windowSize": {
					"width": 660,
					"height": 400
				},
				"appPosition": {
					"x": 180,
					"y": 220
				},
				"applicationFolderPosition": {
					"x": 480,
					"y": 220
				}
			},
			"minimumSystemVersion": "10.13",
			"hardenedRuntime": true
		},
		"linux": {
			"deb": {
				"depends": []
			},
			"rpm": {
				"depends": [],
				"epoch": 0,
				"release": "1"
			}
		}
	},
	"plugins": {
		"updater": {
			"active": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYzNDk0MEZEQTlEMUYzNzkKUldSNTg5R3AvVUJKWS9MZ3E3OVpkMFFtQVpiR1NacFFaS1UrTTVRR292a0syNFpIemNLUkdCVC8K",
			"endpoints": [
				"https://github.com/Xevion/usage-indicator/releases/latest/download/latest.json"
			]
		}
	}
}
